<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Weather</title>
    <link rel="stylesheet" href="./css/style.css">
</head>

<body>
    <header>
        <div>
            <div class="bluecir"></div>
            <div class="whitecir"></div>
        </div>

        <div class="Title">
            </ion-icon>Weather</div>

    </header>

    <div class="user-box">
        <form class="searchform">
            <input class="locationinput" type="text" required="" name="">
            <label>Location</label>
            <input class="searchbtn" type="submit" value="search">
        </form>
    </div>

    <div class="loading display-none">

    </div>


    <div class="container  display-none">
        <div class="box" id="box1">
            <div>Location</div>
            <div class="textinfo locationtext display-none">Ahemdabad</div>
        </div>
        <div class="box" id="box2">
            <div>Temperature</div>
            <div class="textinfo Temperaturetext display-none"></div>
        </div>
        <div class="box" id="box3">
            <div>Humidity</div>
            <div class="textinfo Humiditytext display-none"></div>
        </div>
        <div class="box" id="box4">
            <div>Time</div>
            <div class="textinfo Timetext display-none"></div>
        </div>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="/js/app.js"></script>
</body>

</html>